<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hearth" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo</item> // text, button
        <item name="colorPrimaryVariant">@color/indigo</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/indigo</item>
        <item name="colorSecondaryVariant">@color/indigo</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/taint_white</item> // activities background color
        <item name="colorOnSecondaryContainer">@color/indigo</item>
        <!-- Text Field Edittext -->
        <item name="colorControlNormal">@color/indigo</item>
        <item name="colorControlActivated">@color/indigo</item>
        <!-- Vector Icons -->
        <item name="android:colorControlNormal">@color/indigo</item>
        <!-- Custom Animations -->
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textColorLink">@color/indigo</item>
    </style>

    <!-- Custom Animations -->
    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/zoom_in_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/zoom_in_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/zoom_out_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/zoom_out_exit</item>
    </style>
</resources>